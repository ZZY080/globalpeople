    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
    border-radius: 30rpx;
}

.list-main .item .pic-desc {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.list-main .item .pic-desc .pic {
    width: 60rpx;
    height: 60rpx;
    /* background-color: rgba(0,0,0,0.3); */
    margin-right: 30rpx;
}
.list-main .item .pic-desc .pic  image {
    width: 100%;
    height: 100%;
}
.list-main .item .pic-desc  .desc {
    /* color: ; */
}
.list-main .item  .arrow-pic {
    width: 50rpx;
    height: 50rpx;

}
.list-main .item  .arrow-pic image {
    width: 100%;
    height: 100%;
}
.list-main .support {
    display: flex;
    padding: 40rpx 0 ;
    /* color: #4a7874; */
    color: rgba(0,0,0,0.3);
    justify-content: center;
}