.hot-rent-wrapper {
	padding: 0 32rpx;
	margin-top: 16rpx;
}

.hot-rent-main {}

.hot-rent-main .item {
	opacity: 1;
	border-radius: 24rpx;
	background-color: rgba(247, 248, 250, 1);
	display: flex;
	justify-content: flex-start;
	align-items: center;
	padding: 16rpx 24rpx;
	margin-bottom: 16rpx;
}

.hot-rent-main .item .avatar {
	width: 80rpx;
	height: 80rpx;
	overflow: hidden;
	border-radius: 40rpx;
	background-color: gray;
}

.hot-rent-main .item .avatar image {
	width: 100%;
	height: 100%;
}

.hot-rent-main .item .center {
	flex: 1;
	margin: 0 24rpx 0 24rpx;
}

.hot-rent-main .item .center .username {
	font-size: 32rpx;
	font-weight: 800;
	color: rgba(29, 33, 41, 1);
}

.hot-rent-main .item .center .desc {
	margin-top: 6rpx;
	font-size: 28rpx;
	font-weight: 400;
	line-height: 44rpx;
	color: rgba(134, 144, 156, 1);
}
.hot-rent-main .item .btns {
	border-radius: 40rpx;
	background-color: rgba(0,128,0,1);
	padding: 12rpx 28rpx;
	font-size: 28rpx;
	color: rgba(255,255,255,1);
}