.info-wrapper {
	margin-top: 80rpx;
	padding: 0 32rpx;
}
.info-main {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.info-main .desc-time {
	display: flex;
	flex-direction: row;
	color: gray;
	font-size: 28rpx;
}

.info-main .danwei-price {
	margin-top: 32rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}
.info-main .danwei-price .danwei {
	font-size: 23rpx;
}
.info-main .danwei-price .price {
	font-size: 36rpx;
	font-weight: 800;
}
.info-main .rest-order {
	display: flex;
	flex-direction: row;
	margin-top: 25rpx;
	font-size: 28rpx;
	color: gray;
}
.payment-wrapper {
	margin-top: 100rpx;
	padding: 0 32rpx;
}
.payment-main .item {
	border-radius: 10rpx;
	box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
	padding: 20rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 40rpx;
}

.payment-main .item  .logo-desc {
	display: flex;
	flex-direction: row;
	align-items: center;
}
.payment-main .item  .logo-desc .logo {
	width: 50rpx;
	height: 50rpx;
	margin-right: 27rpx;
}
.payment-main .item  .logo-desc .desc {
 font-size: 28rpx;
 font-weight: 800;
}
.payment-main .item .icon{
	width: 50rpx;
	height: 50rpx;
}
.payment-main .item .icon .ok {
	width: 100%;
	height: 100%;
}

.btn-wrapper {
	position: fixed;
	bottom: 70rpx;
	box-sizing: border-box;
	width: 100%;
	padding: 0 32rpx;
}
.btn-main {
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #07c160;
	color: white;
	padding: 20rpx 0;
	border-radius: 20rpx;
	transition: opacity 0.3 ease;
}
.btn-main:active {
	opacity: 0.2;
	
}

.password-wrap {
	position: absolute;
	box-sizing: border-box;
	width: 100vw;
	height: 100vh;
	top: 0;
	background-color: rgba(0,0,0,0.5);
	padding: 0 40rpx;
}


.password-wrap .password-main {
	margin-top: 150rpx;
	background-color: white;
	box-sizing: border-box;
	padding: 32rpx 32rpx;
	border-radius: 10rpx;
}
.password-main .icon-warning {
	position: relative;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}
.password-main .icon-warning .icon {
	position: absolute;
	left: 0rpx;
	width: 30rpx;
	height: 30rpx;
}
.password-main .icon-warning .warning {

}
.password-main .title {
	margin-top: 50rpx;
	display: flex;
	justify-content: center;
}
.password-main .danwei-price {
	font-weight: 800;
	font-size: 38rpx;
	margin-top: 32rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}
.password-main .desc-select {
	margin-top: 40rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	border-top: 1px solid rgba(0,0,0,0.03);
	padding-top: 20rpx;
	color: gray;
}
.password-main .desc-select .desc {
	font-size: 28rpx;
}
.password-main .desc-select .select {
	display: flex;
	/* align-items: center; */
}
.password-main .desc-select .select .paypic {
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
}
.password-main .desc-select .select .payword {
	font-size: 28rpx;
}
.password-main .list {
	display: flex;
	margin-top: 50rpx;
}
.password-main .list .item {
	width: 16.66666%;
	height: 90rpx;
	border-radius: 10rpx;
	padding:0 20rpx;
	border: 1px solid rgba(0,0,0,0.1);
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right: 5rpx;
}
.password-main .list .item:last-child {
	margin-right: 0rpx;
}



.keyboard-wrapper {
	position: fixed;
	width: 100%;
	bottom: 0;
	z-index: 100000;
	background-color: white;
}
.keyboard-main .icon-wrapper {
 display: flex;
 justify-content: center;
 align-items: center;
 /* background-color: #dfd8d8; */
}
.keyboard-main .icon-wrapper .icon {
	width: 60rpx;
	height: 60rpx;
}
.keyboard-main  .list {
	display: flex;
	flex-wrap: wrap;
}
.keyboard-main  .list .item {
	width: 33.33%;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: white;
	border: 1px solid rgba(0,0,0,0.1);
	padding: 40rpx 0rpx;
	font-weight: 800;
	transition: all 0.3 ease;
}
.keyboard-main  .list .item  .pic {
	width: 50rpx;
	height: 50rpx;
}
.keyboard-main  .list .item:active{
	background-color: rgba(0,0,0,0.1);
}
